<div class="container">
  <div class="container">
    <%#<%= paginate @users %> 
  </div>
<table>
  <thead>
    <tr>
      <th>Nombre: </th>
      <th>Tweets:</th>
      <th>Avatar:</th>
      <th>likes:</th>
      <th colspan="3"></th>
    </tr>
  </thead>
</div>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td> 
        <td> <%= link_to 'Tweets', tweets_path %> </td>
        <td><img src="<%= user.avatar %>" class="img-thumbnail" alt="user avatar"></td>
        <td><%= user.tweets.size %></td>
        <!--agregar una vez que este el administrador, if currente_admin?-->
      </tr>
    <% end %>
  </tbody>